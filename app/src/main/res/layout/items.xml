<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewArtistNameTrackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:maxLength="25"
        android:text="Track Name (Artist Name)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCollectionNamePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection : CollectionName - Rs 30"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/textViewArtistNameTrackName"
        app:layout_constraintTop_toBottomOf="@+id/textViewArtistNameTrackName" />

    <TextView
        android:id="@+id/textViewReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="26-08-2020"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewArtistNameTrackName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewArtistNameTrackName" />

    <TextView
        android:id="@+id/textViewUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url: https://google.com/img1.png"
        app:layout_constraintStart_toStartOf="@+id/textViewCollectionNamePrice"
        app:layout_constraintTop_toBottomOf="@+id/textViewCollectionNamePrice" />
</android.support.constraint.ConstraintLayout>